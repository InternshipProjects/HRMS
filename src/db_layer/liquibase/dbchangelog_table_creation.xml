<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">
    <changeSet id="1" author="Bhagya">
        <createTable tableName="employee">
            <column name="name" type="varchar(30)"/>
            <column name="Eid" type="varchar(50)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="varchar(30)"/>
            <column name="skills" type="varchar(30)"/>
            <column name="comp_reg_no" type="varchar(30)"/>
        </createTable>
        <createTable tableName="company">
            <column name="comp_name" type="varchar(30)">
            </column>
            <column name="reg_no" type="varchar(50)">
                <constraints primaryKey='true' nullable="false"/>
            </column>
            <column name="website" type="varchar(30)"/>
            <column name="address" type="varchar(30)"/>
            <column name="phno" type="bigint"/>
        </createTable>
        <createTable tableName="client">
            <column name="client_name" type="varchar(30)"/>
            <column name="client_id" type="varchar(30)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="country" type="varchar(30)"/>
            <column name="email" type="varchar(30)"/>
            <column name="phno" type="bigint"/>
        </createTable>
        <createTable tableName="project">
            <column name="proj_name" type="varchar(30)"/>
            <column name="proj_no" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="no_of_people_needed" type="int"/>
            <column name="start_date" type="date"/>
            <column name="end_date" type="date"/>
            <column name="client_id" type="int"/>
        </createTable>
        <createTable tableName="skillset">
            <column name="name_of_skill" type="varchar(30)"/>
            <column name="skill_id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="proj_no" type="int"/>
        </createTable>
        <createTable tableName="project_allocation">
            <column name="emp_id" type="int"/>
            <column name="proj_no" type="int"/>
            <column name="start_date" type="date"/>
            <column name="end_date" type="date"/>
        </createTable>
   </changeSet>
</databaseChangeLog>