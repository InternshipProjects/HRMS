<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="refreshTokens" author="dhanalakshmi">
        <createTable tableName="refresh_tokens">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="token" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint constraintName="unique_token" 
                            columnNames="token" tableName="refresh_tokens"/>
        <addAutoIncrement columnDataType="int" columnName="id" defaultOnNull="flase" generationType="ALWAYS"
            incrementBy="1" startWith="1" tableName="refresh_tokens"/>
    </changeSet>
</databaseChangeLog>